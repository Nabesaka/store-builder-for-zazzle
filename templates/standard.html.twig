<div class="zsb_products zsb_cf">
    {% for product in products %}

        {% if loop.first %}
            <div class="zsb_row zsb_cf">
        {% endif %}

                <div class="zsb_product">
                    <div class="zsb_image">
                        {% if product.getImageUrl %}
                            <img src="{{ product.getImageUrl }}" />
                        {% endif %}
                    </div>
                    <div class="zsb_title">
                        <a href="{{ product.getLink|rf(settings.referral_id) }}">{{ product.getTitle[:45]|raw }}&hellip;</a>
                    </div>
                </div>

        {% if (loop.index % 3) == 0 and loop.last != true %}
            </div>
            <div class="zsb_row zsb_cf">
        {% endif %}

        {% if loop.last %}
            </div>
        {% endif %}

    {% endfor %}
</div>
