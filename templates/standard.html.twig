<div class="zsb_products">
    {% for product in products %}
        <div class="zsb_product">
            <div class="zsb_image">
                {% if product.getImageUrlLarge %}
                    <img src="{{ product.getImageUrlLarge }}" />
                {% endif %}
            </div>
            <div class="zsb_title">
                <a href="{{ product.getLink|rf(settings.referral_id) }}">{{ product.getTitle[:45]|raw }}&hellip;</a>
            </div>
        </div>
    {% endfor %}
</div>
